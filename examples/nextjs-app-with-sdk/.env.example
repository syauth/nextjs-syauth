# SyAuth Configuration
# Your SyAuth API URL
NEXT_PUBLIC_SYAUTH_API_URL=https://api.yourdomain.com/e/v1

# OAuth Client ID from SyAuth Dashboard
NEXT_PUBLIC_SYAUTH_CLIENT_ID=your-oauth-client-id-here

# Your OAuth Client Secret (keep this secret!)
SYAUTH_CLIENT_SECRET=your-oauth-client-secret-here

# API Key for user registration (optional - only needed if you want to support registration)
NEXT_PUBLIC_SYAUTH_API_KEY=your-api-key-here

# OAuth Redirect URI (must match what's configured in SyAuth Dashboard)
NEXT_PUBLIC_SYAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# OAuth Scopes
NEXT_PUBLIC_SYAUTH_SCOPES=openid profile email

# Where to redirect after successful login
NEXT_PUBLIC_REDIRECT_AFTER_LOGIN=/dashboard
