{
  "name": "@syauth/nextjs",
  "version": "0.4.0",
  "description": "OAuth 2.0 Authentication SDK for Next.js with PKCE support - Part of SyAuth by Nexorix",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "edge-light": "./dist/middleware.mjs",
      "import": "./dist/middleware.mjs",
      "require": "./dist/middleware.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/middleware.ts src/server.ts --format cjs,esm --dts --external react --external react-dom --external next --external next/navigation --external next/server --external axios",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nextjs",
    "authentication",
    "auth",
    "syauth",
    "react",
    "oauth",
    "sso"
  ],
  "author": "Nexorix",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/syauth/nextjs-syauth.git"
  },
  "homepage": "https://github.com/syauth/nextjs-syauth#readme",
  "bugs": {
    "url": "https://github.com/syauth/nextjs-syauth/issues"
  },
  "peerDependencies": {
    "axios": "^1.0.0",
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
